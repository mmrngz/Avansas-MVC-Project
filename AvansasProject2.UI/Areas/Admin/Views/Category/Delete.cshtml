@model AvansasProject2.MODEL.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <div class="delete-form-container">
        <h2 class="delete-title">Silme Onayı</h2>
        <p class="delete-description">Bu öğeyi silmek istediğinizden emin misiniz?</p>
        <form id="delete-form" asp-action="Delete" asp-controller="Category" asp-area="Admin">
            <input type="hidden" asp-for="Id" />
            <div class="delete-button-container">
                <button id="delete-button" class="btn btn-danger" type="submit">Sil</button>
                <a class="btn btn-secondary" asp-action="Index" asp-controller="Category" asp-area="Admin">İptal</a>
            </div>
        </form>
    </div>
</div>


