@model AvansasProject2.MODEL.Models.Product

@{
    ViewData["Title"] = "Ürün Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center"> Ürün Detay Sayfası </h1>

<<div class="container mt-4 product-detail">
    <div class="product-image">
        <img src="@Model.Image" alt="@Model.Title">
    </div>
    <div class="product-info">
        <h1 class="product-title">@Model.Title</h1>
        <p class="product-category">Kategori: @Model.CategoryId</p>

        <div>
            <span class="badge @(Model.IsHome ? "badge-success" : "badge-danger")">
                @if (Model.IsHome)
                {
                    <span>Anasayfa</span>
                }
                else
                {
                    <span>Anasayfa Değil</span>
                }
            </span>

            <span class="badge @(Model.IsStock ? "badge-success" : "badge-danger")">
                @if (Model.IsStock)
                {
                    <span>Stokta</span>
                }
                else
                {
                    <span>Stokta Değil</span>
                }
            </span>
        </div>
    </div>
</div>