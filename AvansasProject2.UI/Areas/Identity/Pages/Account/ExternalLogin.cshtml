@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

<h1>@ViewData["Title"]</h1>

<hr />



<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="custom-form-group">
                <label asp-for="Input.Name">Adınız</label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="custom-form-group">
                <label asp-for="Input.Surname">Soyadınız</label>
                <input asp-for="Input.Surname" class="form-control" />
                <span asp-validation-for="Input.Surname" class="text-danger"></span>
            </div>
            <div class="custom-form-group">
                <label asp-for="Input.Email">E-Mail</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="custom-form-group">
                <label asp-for="Input.Postcode">Posta Kodu</label>
                <input asp-for="Input.Postcode" class="form-control" />
                <span asp-validation-for="Input.Postcode" class="text-danger"></span>
            </div>
            <div class="custom-form-group">
                <label asp-for="Input.Address">Adresiniz</label>
                <input asp-for="Input.Address" class="form-control" />
                <span asp-validation-for="Input.Address " class="text-danger"></span>
            </div>
            <div class="custom-form-group">
                <label asp-for="Input.City">Şehir</label>
                <input asp-for="Input.City" class="form-control" />
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="custom-form-group">
                <label asp-for="Input.Neighborhood">Mahalle</label>
                <input asp-for="Input.Neighborhood" class="form-control" />
                <span asp-validation-for="Input.Neighborhood" class="text-danger"></span>
            </div>
            <div class="custom-form-group">
                <label asp-for="Input.PhoneNumber">Telefon Numaranız</label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber " class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
